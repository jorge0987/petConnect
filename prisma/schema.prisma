generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model User {
  id            String        @id @default(uuid())
  tipo_usuario  String
  nome          String
  endereco      String?
  cnpj          String?       @unique
  contato       String
  historico     String?
  email         String        @unique
  senha         String  
  interesse     Interesse[]
  animal        Animal[]
}

model Animal {
  id            String        @id @default(uuid())
  especie       String
  raca          String
  idade         String
  tamanho       String
  sexo          String
  descricao     String
  personalidade String
  adotado       Boolean
  created_at    DateTime      @default(now())
  updated_at    DateTime      @updatedAt @default(now())
  fotos         foto[]
  interesse     Interesse[]
  user          User?         @relation(fields: [user_id], references: [id], onDelete: Cascade)
  user_id       String
  
}

model foto {
  id            String    @unique  @id @default(uuid())
  arquivo       String     
  animal        Animal    @relation(fields: [animal_id], references: [id], onDelete: Cascade)
  animal_id     String
}

model Interesse {
  id            String    @unique  @id @default(uuid())
  user          User?     @relation(fields: [user_id], references: [id], onDelete: Cascade)
  user_id       String
  animal        Animal?   @relation(fields: [animal_id], references: [id], onDelete: Cascade)
  animal_id     String
}